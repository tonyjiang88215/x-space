{
    "compilerOptions": {
        "outDir": "./dist",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "module": "es6",
        "target": "es5",
        "jsx": "react"
    },
    "lib": [
        "es6"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "plugins": [
        {
            "name": "typescript-workspace-plugin"
        }
    ]
}